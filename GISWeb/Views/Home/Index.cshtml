@{
    ViewData["Title"] = "GIS Points App";
}

<link rel="stylesheet" href="https://js.arcgis.com/4.28/esri/themes/light/main.css">

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Add New Point</h2>
            <form id="pointForm" class="p-2">
                <div class="mb-3">
                    <label for="name" class="form-label fw-semibold">Name</label>
                    <input type="text" class="form-control" id="name" required>
                </div>

                <div class="mb-3">
                    <label for="latitude" class="form-label fw-semibold">Latitude</label>
                    <input type="text" pattern="^-?\d+(\.\d+)?$" class="form-control" id="latitude" required>
                </div>

                <div class="mb-3">
                    <label for="longitude" class="form-label fw-semibold">Longitude</label>
                    <input type="text" pattern="^-?\d+(\.\d+)?$" class="form-control" id="longitude" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>

        </div>
        <div class="col-md-8">
            <div id="mapView" style="height: 500px; width: 100%;"></div>
        </div>
    </div>
</div>

@section Scripts {
    

    <script src="https://js.arcgis.com/4.28/"></script>

    <script src="~/gis/map.js"></script>
}
